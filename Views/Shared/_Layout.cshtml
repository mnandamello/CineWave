﻿
<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CineWave</title>
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../../dist/css/adminlte.min.css">

    <style>

        .newBack {
            background-color: #0E1015;
            display: flex !important;
        }

        .navSearch {
            width: 40vw !important;
        }

    </style>

</head>

<body class="layout-top-nav">

    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light newBack">
        <ul class="navbar-nav">
            <li class="nav-item dropdown">
                <a style="color:white !important;" class="nav-link dropdown-toggle" href="#" id="navbarDropdown2" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-bars"></i>
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown2">
                    <a class="dropdown-item" asp-controller="Auth" asp-action="LoginPage">Login</a>
                    <a class="dropdown-item" asp-controller="Auth" asp-action="CadastroPage">Cadastro</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" asp-controller="Usuario" asp-action="PerfilPage">Perfil</a>
                    <a class="dropdown-item" asp-controller="Campanha" asp-action="CadastrarCampanhaPage">Cadastrar Campanha</a>
                    <a class="dropdown-item" asp-controller="Campanha" asp-action="MinhasCampanhasPage">Minhas Campanhas</a>
                    <a class="dropdown-item" asp-controller="Campanha" asp-action="PrevisoesPage">Previsões</a>
                </div>
            </li>
        </ul>

        <!-- SEARCH FORM -->
        <form class="form-inline ml-3 ">
            <div class="input-group input-group-sm navSearch">
                <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">
                <div class="input-group-append">
                    <button class="btn btn-navbar" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </form>




    </nav>
    <!-- /.navbar -->
    @RenderBody()

    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="../../plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="../../dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>