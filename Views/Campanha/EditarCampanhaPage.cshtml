@model CineWave.Models.Campanha;

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Editar Campanha</h3>
                </div>
                <div class="card-body">
                    <form asp-action="EditarCampanha" asp-controller="Campanha" method="post">
                        <div class="form-group">
                            <input type="hidden" asp-for="ReachExpectations" class="form-control" value="@ViewBag.campanhas.Id" name="id" />
                        </div>

                        <div class="form-group">
                            <label for="MovieTitle">Título do Filme</label>
                            <input type="text" class="form-control" asp-for="MovieTitle" value="@ViewBag.campanhas.MovieTitle" placeholder="Digite o título do filme" name="MovieTitle" />
                            <span asp-validation-for="MovieTitle" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="GenderMovie">Gênero</label>
                            <input type="text" class="form-control" asp-for="GenderMovie" value="@ViewBag.campanhas.GenderMovie" placeholder="Digite o gênero do filme" name="GenderMovie" />
                            <span asp-validation-for="GenderMovie" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="AgeRange">Faixa Etária</label>
                            <input type="text" class="form-control" asp-for="AgeRange" value="@ViewBag.campanhas.AgeRange" placeholder="Digite a faixa etária" name="AgeRange" />
                            <span asp-validation-for="AgeRange" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="Budget">Orçamento</label>
                            <input type="number" step="0.01" class="form-control" asp-for="Budget" value="@ViewBag.campanhas.Budget" placeholder="Digite o orçamento" name="Budget" />
                            <span asp-validation-for="Budget" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="ReachExpectations">Expectativa de Alcance</label>
                            <input type="number" class="form-control" asp-for="ReachExpectations" value="@ViewBag.campanhas.ReachExpectations" placeholder="Digite a expectativa de alcance" name="ReachExpectations" />
                            <span asp-validation-for="ReachExpectations" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-success btn-block">Salvar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
