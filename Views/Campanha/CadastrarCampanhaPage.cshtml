@model CineWave.DTOs.CadastroCampanhaDTO

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Cadastrar Nova Campanha</h3>
                </div>
                <div class="card-body">
                    <form asp-controller="Campanha" asp-action="CadastrarCampanha" method="post">
                        <div class="form-group">
                            <label for="MovieTitle">Título do Filme</label>
                            <input type="text" class="form-control" asp-for="MovieTitle" placeholder="Digite o título do filme" name="MovieTitle" />
                        </div>
                        <div class="form-group">
                            <label for="GenderMovie">Gênero</label>
                            <input type="text" class="form-control" asp-for="GenderMovie" placeholder="Digite o gênero do filme" name="GenderMovie" />
                        </div>
                        <div class="form-group">
                            <label for="AgeRange">Faixa Etária</label>
                            <input type="text" class="form-control" asp-for="AgeRange" placeholder="Digite a faixa etária" name="AgeRange" />
                        </div>
                        <div class="form-group">
                            <label for="Budget">Budget</label>
                            <input type="number" step="0.01" class="form-control" asp-for="Budget" placeholder="Digite o orçamento" name="Budget" />
                        </div>
                        <div class="form-group">
                            <label for="ReachExpectations">Expectativa de Alcance</label>
                            <input type="number" class="form-control" asp-for="ReachExpectations" placeholder="Digite a expectativa de alcance" name="ReachExpectations" />
                        </div>
                        <button type="submit" class="btn btn-success btn-block">Cadastrar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>